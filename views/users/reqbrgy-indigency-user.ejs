<%- include('../partials/header') %> <%- include('../partials/navbar') %>

<div class="news-container container-fluid">
  <div class="row row-news" style="margin-bottom: 40px;">
    <div class="col-lg-4 whats-happening px-0">
      <div class="box-fluid">
        <h1 class="news-h1 req-h1">Request for Certification of Indigency</h1>
        >
      

        <div class="req-list">
          <h4>REQUIREMENTS</h4>
          <ul>
            <li>Filled-out Application Form</li>
            <li>Certificate of Residency</li>
            <li>Barangay ID Fee</li>
            <li>Any Valid ID or PSA</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-lg-8 news-container">
      <div class="news-inside">
        <form class="row g-3 req-row" action="/login" method="GET">
          <div class="col-12 req-distance">
            <h5>Fill out this Application Form</h5>
            <i>
              Note: Please make sure that all of the informations are true.
            </i>
            
            <label class="form-label"
              >Full Name <i> (Last Name, First Name, Middle Name) </i></label
            >
            <input type="text" class="req-input" name="fullname" required/>
          </div>
          <div class="col-12 req-distance">
            <label class="form-label">Address</label>
            <input type="text" class="req-input" name="address" required />
          </div>
          <div class="col-md-6 req-distance">
            <label class="form-label">Email</label>
            <input type="email" class="req-input" name="email" required/>
          </div>
          <div class="col-md-6 req-distance">
            <label class="form-label">Phone</label>
            <input type="text" class="req-input" name="phone" required/>
          </div>
          <div class="col-md-6 req-distance">
            <label class="form-label"> Birthday <i style="font-size: 13px;"> (MM/DD/YYYY) </i>: </label>
            <input type="text" class="req-input" name="birthday" required/>
          </div>
          <div class="col-md-6 req-distance">
            <label class="form-label">Date Residing at BSI  <i style="font-size: 13px;"> (MM/DD/YYYY) </i>:</label>
            <input type="text" class="req-input" name="datestarted" required/>
          </div>
          <div class="col-12 req-distance">
            <label class="form-label">Purpose</label>
            <input type="text" class="req-input" name="purposeofreq" required/>
          </div>
          <div class="col-12 req-distance">
            <label class="form-label">CTC</label>
            <input type="text" class="req-input" name="ctc" required/>
          </div>
          <div class="col-12">
            <p> <i> Note: Complete your requirements in one PDF file. <a href="/tutorials" style="color: teal"> Click here for more information</a> </i></p>
            <label for="image">Requirements :</label>
            <input
              type="file"
              class="upload-file"
              name="image"
              id="exampleFormControlFile1" 
            />
          </div>

          <div class="col-12 submit-center">
            <button type="submit" class="btn submit">
              Submit Application Form
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
