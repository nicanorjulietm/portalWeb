                <div class="tab-pane fade" id="nav-finished" role="tabpanel" aria-labelledby="nav-finished-tab">
                    <div class="tableFixHead">
           
               
                        <table class="table table-hover citizen-table">
                          <thead class="table-dark">
                              <!-- <th scope="col">#</th> -->
                              <th scope="col">Date Recorded: </th>
                             
                              <th scope="col">Complainant</th>
                              <th scope="col">Defendant</th>
                              <th scope="col">Request</th>
                              <th scope="col"></th>
                              <th scope="col"></th>
                            </tr>
                          </thead>
                          <tbody>
                           
                          <% blottersFinished.forEach(function(users){ %>
                            <tr>
                              <th scope="row"><%= users.daterecorded %></th>
                              
