<%- include('../partials/header') %> 

    <div class="news-container req-view-div">
              <div class="news-inside">
                <form class="row g-3 req-row blotter-w" action="/adminsviewblotter/<%-users._id %>" method="POST">
                    <div class="col-12 req-distance">
                        <div class="title-design" style="width: 100%; padding-top: 50px;" >
                            <h5>Blotters Form</h5>
                            <hr />
                          </div>
  
                        <div class="date-req " style="text-align: right;">
                        <label class="req-label"> <b>Date : <input style="width: 100px;" type="text" value="<%- users.daterecorded %>" required/>  </b> </label>  <br>
                        <label class="req-label"><b> Request : <%= users.request %> </b> </label> 
                        <select class="custom-select my-1 mr-sm-2" name="request" style="width: 100px">
                          <!-- <option selected></option> -->
                          <option value="On-going">On-going</option>
                          <option value="Finished">Finished</option>
                        
                        </select>
                      </div>      
                      <label class="req-label" style="margin-top: 7px;"
                        >Full Name of Complainant<i style="font-size: 13px;"> (Last Name, First Name, Middle Name) </i></label
                      >
                      <input type="text" class="req-view-input" name="fullnamecomplainant" required value="<%=users.fullnamecomplainant %> " />
                    </div>                          
                    <div class="col-md-6 req-distance">
                      <label class="req-label">Email</label>
                      <input type="email" class="req-view-input" name="email"style="width: 100%;" required value="<%=users.email %> "/>
                    </div>
                    <div class="col-md-6 req-distance">
                      <label class="req-label">Phone</label>
                      <input type="text" class="req-view-input" name="phone" style="width: 100%;" required value="<%=users.phone %> " />
                    </div>
                    <div class="col-md-12 req-distance">
                    <label class="req-label">Full Name of Defendant :</label>
                      <input type="text" class="req-view-input" style="width: 100%;" name="fullnamedefendant" required value="<%=users.fullnamedefendant %> "/>
                    </div>
                    <div class="col-12 req-distance">
                      <label class="req-label">Address where Incident happened :</label>
                      <input type="text" class="req-view-input" name="address" required value="<%=users.address %> "/>
                    </div>
                    
                      <div class="col-md-6 req-distance">
                          <label class="req-label">Date :</label>
                          <input type="text" class="req-view-input" placeholder="MM/DD/YYYY" name="date"style="width: 100%;" required value="<%=users.date %> " />
                        </div>
                        <div class="col-md-6 req-distance">
                          <label class="req-label">Time :</label>
                          <input type="text" class="req-view-input" placeholder="HH:MM AM" name="time" style="width: 100%;" required value="<%=users.time %> "/>
                        </div>
                        <div class="col-12 req-distance">
                      <label class="form-label">Incidents/Events</label> <br>
                      <input type="text" class="req-input"style="width: 100%;"  name="incident" required  value="<%=users.incident %> "/>
                    </div>
                    
                  
  
                    <div class="col-12 submit-center req-btns " style="text-align: center;">
                      <button type="submit" class="btn submit  " style="width: 230px;">
                        Save Blotter Form
                      </button>
                      
                    </div>
                  </form>
              </div>
   

    </div>


  


