<%- include('partials/header') %>

<div class="login-page">
  <div class="log-container">
    <form autocomplete="off" action="/login" method="POST">
      <div class="title-design">
        <h5>Log into Your Account</h5>
        <hr />
      </div>

      <label for="email"> Email </label>
      <input autocomplete="off" type="email" name="username" required/>

      <label for="password"> Password </label>
      <input
        name="password"
        id="password"
        type="password"
        onchange="check_pass()"
        required
      />

      <button type="submit" class="submit" id="submit">Sign in</button>
      <!-- <input id="errormsg" type="hidden" name="errormsg" onChange="onChange()"> </input> -->
    </form>
